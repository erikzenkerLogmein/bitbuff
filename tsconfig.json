{
	"strict": true,
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "dist",
		"target": "es5",
		"declaration": true,
		"experimentalDecorators": true,      
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,                 
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},	
	"include": [
		"src/**/*"
	],
}
